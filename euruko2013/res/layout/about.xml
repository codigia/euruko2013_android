<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_back"
    android:cacheColorHint="@color/transparent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/menuLogo"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_title" />

        <TextView
            android:id="@+id/aboutEuruko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:autoLink="web"
            android:gravity="center"
            android:text="@string/about"
            android:textSize="@dimen/text_size_verbage" />

        <ImageView
            android:id="@+id/gaiaSponsorLogo"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:onClick="gotoGaiaSponsor"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_gaia" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_gaia_title"
            android:textSize="12sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/codigiaLogo"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:onClick="gotoCodigia"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_codigia" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/about_codigia_title"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

</ScrollView>