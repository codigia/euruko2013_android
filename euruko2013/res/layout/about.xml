<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/content_back"
    android:cacheColorHint="@color/transparent" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/menuLogo"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_title"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/aboutEuruko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:autoLink="web"
            android:textSize="@dimen/text_size_verbage"
            android:text="@string/about" />

        <ImageView
            android:id="@+id/gaiaSponsorLogo"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_gaia"
            android:scaleType="fitCenter"
            android:onClick="gotoGaiaSponsor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="@string/about_gaia_title" />

        <ImageView
            android:id="@+id/codigiaLogo"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_codigia"
            android:scaleType="fitCenter"
            android:onClick="gotoCodigia" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="@string/about_codigia_title" />

    </LinearLayout>
</ScrollView>