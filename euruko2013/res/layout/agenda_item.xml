<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/card"
        android:layout_alignBottom="@+id/card" >

        <View
            android:layout_width="10dp"
            android:layout_height="1500dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/timeline_dots" />
    
        <View
            android:layout_width="10dp"
            android:layout_height="1500dp"
            android:layout_marginLeft="28dp"
            android:background="@color/mainback" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dateBubbleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <View
            android:id="@+id/dateBubble"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_border_filled"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="10dp"
            android:layout_alignTop="@+id/startTime"
            android:layout_alignBottom="@+id/startTime"
            android:layout_marginLeft="5dp" >
            
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="@drawable/line" />
        </RelativeLayout>

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mainback"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="3dp"
            android:text="10:00"
            android:textColor="@color/maintext"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dateBubbleContainer"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:clipChildren="true"
        android:clipToPadding="true" >

        <RelativeLayout
            android:id="@+id/innerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dateBubbleContainer"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:background="@color/card" >
    
            <ImageView
                android:id="@+id/topicPic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/im1" />
        
            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="180dp"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar_sa" />
        
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#50000000" >

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:shadowColor="#000000"
                    android:shadowRadius="5"
                    android:text="10:45"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/title"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/profilePic"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    android:shadowColor="#000000"
                    android:shadowRadius="5"
                    android:text="Title"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            
            </RelativeLayout>
            
            <TextView
                android:id="@+id/who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="230dp"
                android:layout_toRightOf="@+id/profilePic"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Who"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="italic" />
    
        </RelativeLayout>

        <include layout="@layout/card_borders"/>
    </RelativeLayout>

</RelativeLayout>
