<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/menuitems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a9050e"
        android:orientation="vertical"
        android:visibility="visible" >
    
        <RelativeLayout
            android:id="@+id/menuNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMainMenuClick" >
    
            <ImageView
                android:id="@+id/imageViewNews"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="@dimen/main_menu_height"
                android:src="@drawable/news" />
    
            <TextView
                android:id="@+id/textViewNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewNews"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageViewNews"
                android:layout_toRightOf="@+id/imageViewNews"
                android:gravity="center_vertical"
                android:text="News"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#eeeeee" />

        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/menuCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMainMenuClick" >
    
            <ImageView
                android:id="@+id/imageViewCalendar"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="@dimen/main_menu_height"
                android:src="@drawable/calendar" />
    
            <TextView
                android:id="@+id/textViewCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewCalendar"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageViewCalendar"
                android:layout_toRightOf="@+id/imageViewCalendar"
                android:gravity="center_vertical"
                android:text="Calendar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#eeeeee" />

        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/menuSpeakers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMainMenuClick" >
    
            <ImageView
                android:id="@+id/imageViewSpeakers"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="@dimen/main_menu_height"
                android:src="@drawable/speakers" />
    
            <TextView
                android:id="@+id/textViewSpeakers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewSpeakers"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageViewSpeakers"
                android:layout_toRightOf="@+id/imageViewSpeakers"
                android:gravity="center_vertical"
                android:text="Speakers"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#eeeeee" />

        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/menuTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMainMenuClick" >
    
            <ImageView
                android:id="@+id/imageViewTwitter"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="@dimen/main_menu_height"
                android:src="@drawable/twitter" />
    
            <TextView
                android:id="@+id/textViewTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewTwitter"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageViewTwitter"
                android:layout_toRightOf="@+id/imageViewTwitter"
                android:gravity="center_vertical"
                android:text="Twitter"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#eeeeee" />

        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/menuMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMainMenuClick" >
    
            <ImageView
                android:id="@+id/imageViewMap"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="@dimen/main_menu_height"
                android:src="@drawable/maps" />
    
            <TextView
                android:id="@+id/textViewMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewMap"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageViewMap"
                android:layout_toRightOf="@+id/imageViewMap"
                android:gravity="center_vertical"
                android:text="Map"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#eeeeee" />
    
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menuAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMainMenuClick" >
    
            <ImageView
                android:id="@+id/imageViewAbout"
                android:layout_width="@dimen/main_menu_height"
                android:layout_height="@dimen/main_menu_height"
                android:src="@drawable/about" />
    
            <TextView
                android:id="@+id/textViewAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewAbout"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageViewAbout"
                android:layout_toRightOf="@+id/imageViewAbout"
                android:gravity="center_vertical"
                android:text="About"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#eeeeee" />
    
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>