<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/innerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:background="@color/card" >

        <TextView
            android:id="@+id/dayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/monthText"
            android:layout_alignRight="@+id/monthText"
            android:gravity="right"
            android:text="28"
            android:textColor="#888888"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/monthText"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dayNumber"
            android:gravity="right"
            android:text="Jun"
            android:textColor="#888888"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout 
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:minHeight="50dp"
            android:layout_toRightOf="@+id/separator"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

    	    <TextView
    	        android:id="@+id/title"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:gravity="center_vertical"
    	        android:text="This is the title"
    	        android:maxLines="3"
    	        android:textColor="#888888"
    	        android:textSize="18sp"
    	        android:textStyle="bold" />

    	    <TextView
    	        android:id="@+id/summary"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:paddingTop="10dp"
    	        android:paddingBottom="10dp"
    	        android:text="TextView"
    	        android:maxLines="3"
    	        android:ellipsize="end"
    	        android:textColor="#888888"
    	        android:textSize="14sp" />
    
        </LinearLayout>

    	<View
    	    android:id="@+id/separator"
    	    android:layout_width="1dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="10dp"
    	    android:layout_toRightOf="@+id/monthText"
    	    android:layout_alignTop="@+id/container"
    	    android:layout_alignBottom="@+id/container"
    	    android:background="@color/full_separator"
    	/>
    </RelativeLayout>

    <include layout="@layout/card_borders"/>
    
</RelativeLayout>
