<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:erk13="http://schemas.android.com/apk/res/com.codigia.euruko2013"
    android:id="@+id/whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/innerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <com.codigia.euruko2013.TextViewCustomFont
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignBaseline="@+id/profilePic"
            android:layout_alignLeft="@+id/profilePic"
            android:layout_alignRight="@+id/profilePic"
            android:layout_alignTop="@+id/profilePic"
            android:gravity="center"
            android:text="t"
            android:textColor="@color/main_menu_text"
            android:textSize="@dimen/text_size_glyphs"
            erk13:customFont="sosa-regular-webfont.ttf" >
        </com.codigia.euruko2013.TextViewCustomFont>

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/summary"
            android:layout_toRightOf="@+id/profilePic"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textColor="#bbbbbb"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_toRightOf="@+id/profilePic"
            android:autoLink="web"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="TextView"
            android:textColor="#888888"
            android:textSize="@dimen/text_size_verbage" />
    </RelativeLayout>

    <include layout="@layout/card_borders" />

</RelativeLayout>